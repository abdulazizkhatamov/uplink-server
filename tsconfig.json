{
  "extends": "fastify-tsconfig",
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "baseUrl": "./src", // Make sure baseUrl points to src
    "paths": {
      "@/*": ["*"] // Alias "@" to the src folder
    },
    "esModuleInterop": true, // Ensure compatibility with ES modules
    "skipLibCheck": true, // Avoid unnecessary checks
    "strict": true // Enable strict type checking
  },
  "include": ["src/**/*.ts"]
}
